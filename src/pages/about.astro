---
import { getCollection } from 'astro:content';
import SwiperSection from '~/components/SwiperSection.astro';
import BaseLayout from '~/layouts/BaseLayout.astro';
import PageLayout from '~/layouts/PageLayout.astro';

const projects = await getCollection('projects');
---

<BaseLayout variant="dark">
  <PageLayout variant="dark" title="Про компанію" subtitle="Швидко і надійно" />
  <SwiperSection
    class="bg-neutral-light"
    title="Останні проекти"
    swiperProps={{
      cardVariant: 'small',
      navVariant: 'white',
      linkVariant: 'primary',
      data: projects,
      linkText: 'Всі послуги',
      linkHref: '/projects',
    }}
  />
</BaseLayout>

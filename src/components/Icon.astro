---
interface Props {
  'class'?: string;
  'class:list'?: string;
  'name': string;
  'size'?: number;
}

const {
  'class': className,
  'class:list': classList,
  name,
  size = 24,
} = Astro.props;
const href = `icons.svg#${name}`;
---

<svg class={className} class:list={classList} width={size} height={size}
  ><use xlink:href={href}></use></svg
>

---
import type { HTMLAttributes } from 'astro/types';
import Icon from './Icon.astro';

interface Props extends HTMLAttributes<'button'> {
  icon: 'left' | 'right';
  variant: 'normal' | 'line';
}
const {
  variant = 'normal',
  icon = 'left',
  class: className,
  ...props
} = Astro.props;
---

<button
  class:list={[
    'inline-flex items-center justify-center p-2.5 border-white border-2 rounded-full border-opacity-1 hover:border-opacity-40',
    {
      'bg-white bg-opacity-1 hover:bg-opacity-40 text-brand':
        variant === 'normal',
      'bg-transparent text-white  ': variant === 'line',
    },
  ]}
  {...props}
>
  <Icon
    class:list={['h-4 w-4 fill-current', { 'rotate-180': icon === 'right' }]}
    name="back-arrow"
  />
</button>
